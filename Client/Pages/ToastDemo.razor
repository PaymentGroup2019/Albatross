@page "/ToastDemo"
@layout AdminLayout
@inject IToastService toastService


<div class="container-fluid" style="margin-top:150px">
    <div class="row d-flex flex-row justify-content-center">
        <button class="btn btn-info m-2" @onclick="@(() => toastService.ShowInfo("پس از ورود اطلاعات دکمه تایید را فشار دهید","خبر"))">توست  خبری</button>
        <button class="btn btn-success m-2" @onclick="@(() => toastService.ShowSuccess("با موفقیت انجام شد", "تبریک"))">توست تبریک</button>
        <button class="btn btn-warning m-2" @onclick="@(() => toastService.ShowWarning("پسورد باید شامل حداقل 6 کاراکتر باشد","هشدار"))">توست هشدار</button>
        <button class="btn btn-danger m-2" @onclick="@(() => toastService.ShowError("عبارت موجود در تصویر را درست وارد نمایید","خطا"))">توست خطا</button>
    </div>
</div>

