<div class="text-right">
    <label style="font-size: smaller">@Label</label>
</div>
<div class="form-group text-right mb-2">
    <input type="number" style="height: 30px !important" class="form-control col-8 col-md-7 col-xl-6" 
           min="0" max="@Max" value="0">
</div>
<div class="text-right">
    <label style="font-size: smaller">(@Description)</label>
</div>

@code {
    [Parameter]
    public string Label { get; set; }

    [Parameter]
    public string Description { get; set; }

    [Parameter]
    public int Max { get; set; }
}
